{
	"name": "shared-ui",
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/shared/ui/src",
	"projectType": "library",
	"prefix": "todo",
	"targets": {
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"]
		},
		"storybook": {
			"executor": "@storybook/angular:start-storybook",
			"options": {
				"port": 4400,
				"configDir": "libs/shared/ui/.storybook",
				"buildTarget": "shared-ui:build-storybook",
				"compodoc": false,
				"stylePreprocessorOptions": {
					"includePaths": ["libs/shared/ui/styles/src/lib"]
				}
			},
			"configurations": {
				"ci": {
					"quiet": true
				}
			}
		},
		"build-storybook": {
			"executor": "@storybook/angular:build-storybook",
			"outputs": ["{options.outputDir}"],
			"options": {
				"outputDir": "dist/storybook/shared-ui",
				"configDir": "libs/shared/ui/.storybook",
				"buildTarget": "shared-ui:build-storybook",
				"compodoc": false,
				"stylePreprocessorOptions": {
					"includePaths": ["libs/shared/ui/styles/src/lib"]
				}
			},
			"configurations": {
				"ci": {
					"quiet": true
				}
			}
		},
		"test-storybook": {
			"executor": "nx:run-commands",
			"options": {
				"command": "test-storybook -c libs/shared/ui/.storybook --url=http://localhost:4400"
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/shared/ui/jest.config.ts"
			}
		}
	},
	"generators": {
		"@nrwl/schematics:component": {
			"styleext": "scss"
		}
	},
	"tags": ["type:ui", "scope:shared"]
}
