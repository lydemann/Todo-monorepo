{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "../../dist/out-tsc/apps/todo-app",
		"types": ["jasmine", "node"],
		"target": "ES2022",
		"useDefineForClassFields": false
